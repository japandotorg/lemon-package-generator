{
  "name": "lemon-package-generator",
  "version": "1.0.1",
  "description": "lemon's lemon-package-generator",
  "main": "lib/index",
  "preferglobal": true,
  "bin": {
    "lemon-package-generator": "bin/generator"
  },
  "files": [
    "bin",
    "lib"
  ],
  "engines": {
    "node": ">=0.10"
  },
  "scripts": {
    "test": "mocha",
    "pretest": "standard && echint",
    "posttest": "npm run coverage",
    "coverage": "istanbul cover --dir coverage _mocha -- -R dot",
    "codeclimate": "codeclimate < coverage/lcov.info"
  },
  "echint": {
    "ignore": [
      "test/tmp/**"
    ]
  },
  "standard": {
    "ignore": [
      "template/**",
      "test/tmp/**"
    ]
  },
  "author": "Lemon Rose (https://japandotorg.me/)",
  "license": "ISC",
  "dependencies": {
    "commander": "^8.3.0",
    "debug-log": "^1.0.0",
    "dotenv": "^1.2.0",
    "fs-writefile-promise": "^1.0.1",
    "glob-promise": "^1.0.3",
    "lodash.template": "^3.6.1",
    "mkdirp-promise": "^1.0.2",
    "read-files-promise": "^1.1.0",
    "xtend": "^4.0.0"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.1",
    "echint": "^4.0.2",
    "fs-readfile-promise": "^3.0.1",
    "istanbul": "^0.4.5",
    "mkdirp": "^1.0.4",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "should-promised": "^0.3.1",
    "standard": "^16.0.4"
  }
}
